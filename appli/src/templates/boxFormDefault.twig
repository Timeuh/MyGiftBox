{% extends 'layout.twig' %}

{% block content %}
    <h1>Créer une box</h1>
    <form action="{{ url_for('createBoxDefault') }}" method="post">
        <input name="id" value="{{ box.id }}" type="hidden">
        <label for="libelle" >Libellé</label>
        <input type="text" name="libelle" value="{{ box.libelle }}" id="libelle" required>
        <label for="description">Description</label>
        <input type="text" name="description" id="description" value="{{ box.description }}" required>
        <label for="prix">Est-ce un cadeau ?</label>
        <input type="checkbox" name="cadeau" id="cadeau" value="{{ box.kdo }}">
        <label for="prix">Description du cadeau</label>
        <textarea name="message_cadeau" id="message_cadeau" >{{ box.message_kdo }}</textarea>
        <input type="hidden" name="csrf" value="{{ csrf }}">
        <input type="submit" value="Créer" class="submit">
    </form>
{% endblock %}