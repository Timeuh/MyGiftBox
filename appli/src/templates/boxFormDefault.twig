{% extends 'layout.twig' %}

{% block content %}
    <section id="homepage" class="bg-main-background w-full h-[90vh] flex flex-col justify-center items-center space-y-12">
        <h1 class="text-6xl font-bold text-tea-green">Créer une box</h1>
        <form action="{{ url_for('createBoxDefault') }}" method="post" class="login-form">
            <input name="id" value="{{ box.id }}" type="hidden">
            <div class="flex flex-col items-center space-y-4">
                <label for="libelle" class="form-label">Libellé</label>
                <input type="text" name="libelle" id="libelle" required class="form-input" placeholder="<Libellé>" value="{{ box.libelle }}">
            </div>
            <div class="flex flex-col items-center space-y-4">
                <label for="description" class="form-label">Description</label>
                <textarea name="description" id="description" class="form-input w-full h-24" placeholder="<Description>">{{ box.description }}</textarea>
            </div>
            <div class="flex flex-col items-center space-y-4">
                <label for="prix" class="form-label">Est-ce un cadeau ?</label>
                <input type="checkbox" name="cadeau" id="cadeau" class="w-12 h-12" value="{{ box.kdo }}">
            </div>
            <div class="flex flex-col items-center space-y-4 w-96">
                <label for="prix" class="form-label">Message du cadeau</label>
                <textarea name="message_cadeau" id="message_cadeau" class="form-input w-full h-24" placeholder="<Message cadeau>">{{ box.message_kdo }}</textarea>
            </div>
            <input type="hidden" name="csrf" value="{{ csrf }}">
            <input type="submit" value="Créer" class="login-link text-3xl">
        </form>
    </section>
{% endblock %}