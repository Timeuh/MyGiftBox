{% extends 'layout.twig' %}

{% block content %}
    <section id="homepage" class="bg-main-background w-full h-[90vh] flex flex-col justify-center items-center space-y-12">
        <h1 class="text-6xl font-bold text-tea-green">Créer une box</h1>
        <h2 class="text-3xl font-bold text-tea-green">Vous pouvez également choisir une template de box</h2>
        <form action="{{ url_for('createBox') }}" method="post" class="login-form">
            <select name="template" id="template" class="border-2 border-primary bg-green-tea text-primary w-1/6 h-12 rounded-xl ps-4 outline-none">
                <option value="default" selected>Pas de template</option>
                {% for tem in templates %}
                    <option value="{{ tem.id }}">{{ tem.libelle }}</option>
                {% endfor %}
            </select>
            <div class="flex flex-col items-center space-y-4">
                <label for="libelle" class="form-label">Libellé</label>
                <input type="text" name="libelle" id="libelle" required class="form-input" placeholder="<Libellé>">
            </div>
            <div class="flex flex-col items-center space-y-4">
                <label for="description" class="form-label">Description</label>
                <input type="text" name="description" id="description" required class="form-input" placeholder="<Description>">
            </div>
            <div class="flex flex-col items-center space-y-4">
                <label for="prix" class="form-label">Est-ce un cadeau ?</label>
                <input type="checkbox" name="cadeau" id="cadeau" class="w-12 h-12">
            </div>
            <div class="flex flex-col items-center space-y-4 w-96">
                <label for="prix" class="form-label">Message du cadeau</label>
                <textarea name="message_cadeau" id="message_cadeau" class="form-input w-full h-24" placeholder="<Message cadeau>"></textarea>
            </div>
            <input type="hidden" name="csrf" value="{{ csrf }}">
            <input type="submit" value="Créer" class="login-link text-3xl">
        </form>
    </section>
{% endblock %}