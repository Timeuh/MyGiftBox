{% extends 'layout.twig' %}

{% block content %}
    <h1>Box {{ box.libelle }}</h1>
    <p>{{ box.description }}</p>
    <h2>Montant {{ box.montant }}€</h2>
    {% if canValidate %}
        <a href="{{ url_for('validateBox', {'token': box.token}) }}">Valider ma box</a>
    {% endif %}
    <ul>
        {% for pres in prestations %}
            <li>
                <h3>{{ pres.libelle }} : {{ pres.tarif }}€. Quantité : {{ pres.pivot.quantite}}</h3>
                <h2>Catégorie : {{ pres.categorie.libelle }}</h2>
                <img src="{{ base_path() }}/img/{{ pres.img }}" alt="{{ pres.img }}" width="100" height="100">
                <form method="post" action="{{ url_for('AddPrestaToBox') }}">
                    <input type="hidden" name="presta" value="{{ pres.id }}">
                    <input type="hidden" name="box" value="{{ box.id }}">
                    <input type="hidden" name="quantite" value="{{ 1 }}">
                    <button type="submit">+</button>
                </form>
                <form method="post" action="{{ url_for('delPrestaBox') }}">
                    <input type="hidden" name="presta" value="{{ pres.id }}">
                    <input type="hidden" name="box" value="{{ box.id }}">
                    <button type="submit">-</button>
                </form>
            </li>
        {% endfor %}
    </ul>
    <a href="{{ url_for('categories') }}">Retour à l'accueil</a>
{% endblock %}