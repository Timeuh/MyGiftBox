{% extends 'layout.twig' %}

{% block content %}
    <section id="homepage" class="bg-main-background w-full h-[90vh] flex flex-col justify-center items-center space-y-12">
        <h1 class="text-6xl font-bold text-tea-green">Login</h1>
        <div id="login" class="h-1/3">
            <form id="connexion" method="post" action="{{ url_for('login') }}" class="login-form">
                <label class="form-label">Email : </label>
                <input name="email" type="email" placeholder="<email>" class="form-input">
                <label class="form-label">Mot de passe : </label>
                <input name="password" type="password" placeholder="<mot de passe>" class="form-input">
                <button type="submit" class="login-link text-3xl">Valider</button>
            </form>
        </div>
    </section>
{% endblock %}