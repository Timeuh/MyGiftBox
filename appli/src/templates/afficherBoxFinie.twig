{% extends 'layout.twig' %}

{% block content %}
    <h1>Box {{ box.libelle }}</h1>
    <p>{{ box.description }}</p>
    <div>
        <h2>Voici le lien vers cette Box, vous pouvez le partager</h2>
        <a href="{{ url_for('boxView', {'token': box.token}) }}">{{ url_for('boxView', {'token': box.token}) }}</a>
    </div>
    {% if box.kdo %}
        <h2>{{ box.message_kdo }}</h2>
        {% for pres in box.prestation %}
            <li>
                <span>Quantité : {{ pres.pivot.quantite }}</span>
                <h3>Catégorie : {{ pres.categorie.libelle }}</h3>
                <img src="{{ base_path() }}/img/{{ pres.img }}" alt="{{ pres.img }}" width="100" height="100">
            </li>
        {% endfor %}
    {% else %}
        <h2>Montant {{ box.montant }}€</h2>
        {% for pres in box.prestation %}
            <li>
                <h3>{{ pres.libelle }} : {{ pres.tarif }}€</h3>
                <span>Quantité : {{ pres.pivot.quantite }}</span>
                <h3>Catégorie : {{ pres.categorie.libelle }}</h3>
                <img src="{{ base_path() }}/img/{{ pres.img }}" alt="{{ pres.img }}" width="100" height="100">
            </li>
        {% endfor %}
    {% endif %}
    <ul>

    </ul>
    <a href="{{ url_for('categories') }}">Retour à l'accueil</a>
{% endblock %}